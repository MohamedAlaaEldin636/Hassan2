<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context="com.maproductions.mohamedalaa.hassanp.presentation.auth.RegisterFormFragment"

    tools:ignore="ContentDescription">

    <data>
        <import type="com.maproductions.mohamedalaa.hassanp.presentation.auth.viewModel.RegisterFormViewModel.ImageType"
            alias="TypeImage2"/>

        <variable
            name="viewModel"
            type="com.maproductions.mohamedalaa.hassanp.presentation.auth.viewModel.RegisterFormViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#F9F9F9"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"

            android:layout_width="0dp"
            android:layout_height="0dp"

            android:fillViewport="true"

            android:scrollbars="vertical"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomMaterialCardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"

                android:clipToPadding="false">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="179dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:src="@drawable/ic_bg_register_form"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:padding="7dp"

                        android:src="@drawable/ic_back"

                        android:layout_margin="16dp"

                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{v -> viewModel.goBack(v)}"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/createAccountTextView"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_margin="16dp"

                        style="@style/TextTajawalMedium16"
                        android:text="@string/create_account"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/imageMaterialCardView"

                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{v -> viewModel.pickImage(v, TypeImage2.PROFILE)}"

                        android:layout_width="0dp"
                        android:layout_height="0dp"

                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"

                        app:layout_constraintDimensionRatio="1:1"

                        app:cardCornerRadius="0dp"

                        app:strokeWidth="0dp"
                        app:strokeColor="@color/card_view_stroke_error"
                        materialCardView_setStrokeWidthIntInDpBA="@{viewModel.errorImageProfile ? 2 : 0}"

                        app:cardElevation="0dp"
                        app:cardMaxElevation="0dp"

                        app:layout_constraintTop_toBottomOf="@id/createAccountTextView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imageImageView"

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            tools:background="@color/black"

                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"

                            android:src="@drawable/ic_logo_app_placeholder"
                            imageView_setUrlViaGlideOrIgnore="@{viewModel.imageProfile}"
                            tools:scaleType="centerCrop"/>

                    </com.google.android.material.card.MaterialCardView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:src="@drawable/ic_cam_4"

                        android:layout_margin="4dp"

                        app:layout_constraintBottom_toBottomOf="@id/imageMaterialCardView"
                        app:layout_constraintStart_toStartOf="@id/imageMaterialCardView"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_margin="16dp"

                    android:hint="@string/name"

                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"

                    textInputLayout_setErrorResBA="@{viewModel.errorName}"

                    app:hintTextColor="#717171"
                    android:textColorHint="#717171"
                    android:background="@drawable/dr_input_round_white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textSize="12sp"

                        android:background="@drawable/dr_input_round_white"

                        android:text="@={viewModel.name}"
                        style="@style/TextTajawalMedium12"

                        android:inputType="text"
                        android:imeOptions="actionDone|flagNoFullscreen"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"

                    android:hint="@string/phone_number"

                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"

                    app:suffixText="964+"
                    app:suffixTextColor="#717171"
                    app:expandedHintEnabled="false"

                    textInputLayout_setErrorResBA="@{viewModel.errorPhone}"

                    app:hintTextColor="#717171"
                    android:textColorHint="#717171"
                    android:background="@drawable/dr_input_round_white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textSize="12sp"

                        android:background="@drawable/dr_input_round_white"

                        android:text="@={viewModel.phone}"
                        style="@style/TextTajawalMedium12"

                        android:inputType="number"
                        android:imeOptions="actionDone|flagNoFullscreen"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_margin="16dp"

                    android:hint="@string/register_form_addresss_hint"

                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"

                    textInputLayout_setErrorResBA="@{viewModel.errorAddress}"

                    app:hintTextColor="#717171"
                    android:textColorHint="#717171"
                    android:background="@drawable/dr_input_round_white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textSize="12sp"

                        android:background="@drawable/dr_input_round_white"

                        android:text="@={viewModel.address}"
                        style="@style/TextTajawalMedium12"

                        android:inputType="text"
                        android:imeOptions="actionDone|flagNoFullscreen"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"

                    textInputLayout_setErrorResBA="@{viewModel.errorRelativePhone}"

                    android:hint="@string/relative_phone_hint"

                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"

                    app:suffixText="964+"
                    app:suffixTextColor="#717171"
                    app:expandedHintEnabled="false"

                    app:hintTextColor="#717171"
                    android:textColorHint="#717171"
                    android:background="@drawable/dr_input_round_white">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textSize="12sp"

                        android:background="@drawable/dr_input_round_white"

                        android:text="@={viewModel.relativePhone}"
                        style="@style/TextTajawalMedium12"

                        android:inputType="number"
                        android:imeOptions="actionDone|flagNoFullscreen"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:cardElevation="8dp"
                    app:cardMaxElevation="8dp"

                    android:layout_margin="16dp"

                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            app:cardElevation="8dp"
                            app:cardMaxElevation="8dp"

                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="@{() -> viewModel.togglePickProfession()}"

                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView.TopOnly">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:padding="16dp"

                                style="@style/TextTajawalMedium12"

                                android:ellipsize="end"
                                android:maxLines="1"

                                android:text="@string/pick_your_profession"

                                app:drawableEndCompat="@drawable/ic_arrow_down"
                                app:drawableTint="@color/black"
                                android:drawablePadding="4dp" />

                        </com.google.android.material.card.MaterialCardView>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/pickProfessionRecyclerView"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:visibility="@{viewModel.showPickProfession}"

                            android:padding="8dp"
                            android:clipToPadding="false"

                            android:scrollbars="vertical"
                            tools:itemCount="5"
                            tools:orientation="vertical"
                            tools:listitem="@layout/item_text_with_radio"
                            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"

                    app:cardElevation="8dp"
                    app:cardMaxElevation="8dp"

                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            app:cardElevation="8dp"
                            app:cardMaxElevation="8dp"

                            android:clickable="true"
                            android:focusable="true"
                            android:onClick="@{() -> viewModel.toggleServices()}"

                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView.TopOnly">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:padding="16dp"

                                style="@style/TextTajawalMedium12"

                                android:ellipsize="end"
                                android:maxLines="1"

                                android:text="@string/select_services"

                                app:drawableEndCompat="@drawable/ic_arrow_down"
                                app:drawableTint="@color/black"
                                android:drawablePadding="4dp" />

                        </com.google.android.material.card.MaterialCardView>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/servicesCitiesRecyclerView"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:visibility="@{viewModel.showServices}"

                            android:padding="8dp"
                            android:clipToPadding="false"

                            android:scrollbars="vertical"
                            tools:itemCount="5"
                            tools:orientation="vertical"
                            tools:listitem="@layout/item_text_with_checkbox"
                            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_margin="16dp">

                    <TextView
                        android:id="@+id/videoTitleTextView"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        style="@style/TextTajawalMedium16"

                        android:text="@string/add_video_2"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        style="@style/TextTajawalRegular14"

                        android:text="@string/optional_between_brackets"

                        app:layout_constraintBottom_toBottomOf="@id/videoTitleTextView"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <FrameLayout
                    android:id="@+id/videoFrameLayout"

                    android:layout_width="match_parent"
                    android:layout_height="112dp"

                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"

                    android:padding="16dp"

                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="@{v -> viewModel.pickOrClearVideo(v)}"

                    android:background="@drawable/dr_rounded_white_small">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="center"

                        style="@style/TextTajawalMedium14"
                        android:textColor="#9C9C9C"

                        android:visibility="@{viewModel.video == null}"

                        android:text="@string/press_here_to_add_video"
                        app:drawableTopCompat="@drawable/ic_upload_with_alpha"
                        android:drawablePadding="16dp"

                        android:background="@drawable/dr_rounded_white_small"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:visibility="@{viewModel.video != null}"

                        imageView_setVideoUriViaGlideOrClear="@{viewModel.video}"
                        tools:scaleType="centerCrop"/>

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_margin="16dp"

                    style="@style/TextTajawalMedium16"

                    android:text="@string/id_card_pic"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"

                    android:baselineAligned="false"

                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">

                    <FrameLayout
                        android:id="@+id/idFrontFrameLayout"

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="146dp"

                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"

                        android:padding="16dp"

                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{v -> viewModel.pickImage(v, TypeImage2.ID_FRONT)}"

                        android:background="@{viewModel.errorImageFrontId ? @drawable/dr_rounded_white_small_with_red_border : @drawable/dr_rounded_white_small,default=@drawable/dr_rounded_white_small}">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:gravity="center"

                            style="@style/TextTajawalMedium14"
                            android:textColor="#9C9C9C"

                            android:visibility="@{viewModel.imageFrontId == null}"

                            android:text="@string/front_id_card_pic"
                            app:drawableTopCompat="@drawable/ic_upload_with_alpha"
                            android:drawablePadding="16dp"

                            android:background="@drawable/dr_rounded_white_small"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:visibility="@{viewModel.imageFrontId != null}"

                            imageView_setUrlViaGlideOrIgnore="@{viewModel.imageFrontId}"
                            tools:scaleType="centerCrop"/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/backFrontFrameLayout"

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="146dp"

                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"

                        android:padding="16dp"

                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{v -> viewModel.pickImage(v, TypeImage2.ID_BACK)}"

                        android:background="@{viewModel.errorImageBackId ? @drawable/dr_rounded_white_small_with_red_border : @drawable/dr_rounded_white_small,default=@drawable/dr_rounded_white_small}">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:gravity="center"

                            style="@style/TextTajawalMedium14"
                            android:textColor="#9C9C9C"

                            android:visibility="@{viewModel.imageBackId == null}"

                            android:text="@string/back_id_card_pic"
                            app:drawableTopCompat="@drawable/ic_upload_with_alpha"
                            android:drawablePadding="16dp"

                            android:background="@drawable/dr_rounded_white_small"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:visibility="@{viewModel.imageBackId != null}"

                            imageView_setUrlViaGlideOrIgnore="@{viewModel.imageBackId}"
                            tools:scaleType="centerCrop"/>

                    </FrameLayout>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_margin="16dp">

                    <TextView
                        android:id="@+id/addressTitleTextView"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        style="@style/TextTajawalMedium16"

                        android:text="@string/address_card_pic"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        style="@style/TextTajawalRegular14"

                        android:text="@string/optional_between_brackets"

                        app:layout_constraintBottom_toBottomOf="@id/addressTitleTextView"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"

                    android:baselineAligned="false"

                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">

                    <FrameLayout
                        android:id="@+id/addressFrontFrameLayout"

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="146dp"

                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"

                        android:padding="16dp"

                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{v -> viewModel.pickImage(v, TypeImage2.ADDRESS_FRONT)}"

                        android:background="@drawable/dr_rounded_white_small">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:gravity="center"

                            style="@style/TextTajawalMedium14"
                            android:textColor="#9C9C9C"

                            android:visibility="@{viewModel.imageFrontAddress == null}"

                            android:text="@string/front_address_card_pic"
                            app:drawableTopCompat="@drawable/ic_upload_with_alpha"
                            android:drawablePadding="16dp"

                            android:background="@drawable/dr_rounded_white_small"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:visibility="@{viewModel.imageFrontAddress != null}"

                            imageView_setUrlViaGlideOrIgnore="@{viewModel.imageFrontAddress}"
                            tools:scaleType="centerCrop"/>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/addressBackFrameLayout"

                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="146dp"

                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"

                        android:padding="16dp"

                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{v -> viewModel.pickImage(v, TypeImage2.ADDRESS_BACK)}"

                        android:background="@drawable/dr_rounded_white_small">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:gravity="center"

                            style="@style/TextTajawalMedium14"
                            android:textColor="#9C9C9C"

                            android:visibility="@{viewModel.imageBackAddress == null}"

                            android:text="@string/back_address_card_pic"
                            app:drawableTopCompat="@drawable/ic_upload_with_alpha"
                            android:drawablePadding="16dp"

                            android:background="@drawable/dr_rounded_white_small"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:visibility="@{viewModel.imageBackAddress != null}"

                            imageView_setUrlViaGlideOrIgnore="@{viewModel.imageBackAddress}"
                            tools:scaleType="centerCrop"/>

                    </FrameLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_margin="16dp"

                    style="@style/TextTajawalMedium16"

                    android:text="@string/birth_date"

                    android:textColor="@{viewModel.errorBirthDate == null ? @color/black : @color/card_view_stroke_error}"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"

                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="@{v -> viewModel.pickDate(v)}"

                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"

                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"

                        android:padding="16dp"

                        android:gravity="center"

                        style="@style/TextTajawalMedium16"

                        tools:text="6"
                        android:text="@{viewModel.dateDay}"

                        android:maxLines="1"
                        android:ellipsize="end"

                        app:drawableEndCompat="@drawable/ic_swap"
                        android:drawablePadding="4dp"

                        android:background="@drawable/dr_rounded_white_small"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_height="wrap_content"

                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"

                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"

                        android:gravity="center"

                        style="@style/TextTajawalMedium16"

                        tools:text="فبراير"
                        android:text="@{viewModel.dateMonth}"

                        android:maxLines="1"
                        android:ellipsize="end"

                        app:drawableEndCompat="@drawable/ic_swap"
                        android:drawablePadding="4dp"

                        android:background="@drawable/dr_rounded_white_small"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"

                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"

                        android:gravity="center"

                        style="@style/TextTajawalMedium16"

                        tools:text="1998"
                        android:text="@{viewModel.dateYear}"

                        android:maxLines="1"
                        android:ellipsize="end"

                        app:drawableEndCompat="@drawable/ic_swap"
                        android:drawablePadding="4dp"

                        android:background="@drawable/dr_rounded_white_small"/>

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_margin="16dp"

                    android:hint="@string/password"

                    app:startIconDrawable="@drawable/ic_password"
                    app:startIconTintMode="src_atop"
                    app:startIconTint="@android:color/transparent"

                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"

                    app:hintTextColor="#717171"
                    android:textColorHint="#717171"
                    android:background="@drawable/dr_input_round_white"

                    textInputLayout_setErrorResBA="@{viewModel.errorPassword}"

                    app:layout_constraintTop_toBottomOf="@id/logoImageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textSize="12sp"

                        android:background="@drawable/dr_input_round_white"

                        android:text="@={viewModel.password}"
                        style="@style/TextTajawalMedium12"

                        android:inputType="textPassword"
                        android:imeOptions="actionDone|flagNoFullscreen"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nameTextInputLayout"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"

                    android:hint="@string/confirm_password"

                    textInputLayout_setErrorResBA="@{viewModel.errorConfirmPassword}"

                    app:startIconDrawable="@drawable/ic_password"
                    app:startIconTintMode="src_atop"
                    app:startIconTint="@android:color/transparent"

                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"

                    app:hintTextColor="#717171"
                    android:textColorHint="#717171"
                    android:background="@drawable/dr_input_round_white"

                    app:layout_constraintTop_toBottomOf="@id/logoImageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textSize="12sp"

                        android:background="@drawable/dr_input_round_white"

                        android:text="@={viewModel.confirmPassword}"
                        style="@style/TextTajawalMedium12"

                        android:inputType="textPassword"
                        android:imeOptions="actionDone|flagNoFullscreen"/>

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"

                    android:gravity="center"

                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="@{v -> viewModel.goToLogIn(v)}"

                    android:padding="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"

                        android:gravity="end"

                        android:text="@string/you_have_account"

                        style="@style/TextTajawalRegular16"

                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"

                        android:gravity="start"

                        style="@style/TextTajawalMedium16"
                        android:textColor="#FFBC23"

                        android:text="@string/log_in"

                        android:layout_marginStart="4dp"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bottomMaterialCardView"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:cardMaxElevation="8dp"
            app:cardElevation="8dp"

            app:cardCornerRadius="0dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"

                android:padding="16dp"
                android:clipToPadding="false">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/confirmButton"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/dr_project_round"
                    style="@style/Widget.MaterialComponents.Button"

                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextTajawalMedium16"
                    android:textColor="@color/black"

                    android:onClick="@{v -> viewModel.next(v)}"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"

                    android:gravity="center_vertical"

                    android:layout_marginTop="16dp"

                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="@{() -> viewModel.toggleAgreeOnTermsAndConditions()}">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        tools:src="@drawable/ic_not_checked_5"
                        android:src="@{viewModel.agreeOnTermsAndConditions ? @drawable/ic_checked : @drawable/ic_not_checked_5, default=@drawable/ic_not_checked_5}"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        style="@style/TextTajawalMedium12"

                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"

                        android:text="@string/agree_on"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{v -> viewModel.goToTermsAndConditions(v)}"

                        style="@style/TextTajawalBold12"
                        android:textColor="#FFBC23"

                        android:text="@string/terms_and_conditions"/>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
