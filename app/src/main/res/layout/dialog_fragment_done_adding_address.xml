<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="com.maproductions.mohamedalaa.hassanu.presentation.address.DoneAddingAddressDialogFragment">

    <data>
        <variable
            name="viewModel"
            type="com.maproductions.mohamedalaa.hassanu.presentation.address.viewModel.DoneAddingAddressViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/dr_top_round_white"
        tools:backgroundTint="@color/gray"

        tools:layout_gravity="bottom"

        android:padding="24dp"
        android:clipToPadding="false"

        tools:ignore="ContentDescription">

        <ImageView
            android:id="@+id/circleImageView"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/ic_circle_with_done_gradient"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"

            style="@style/TextTajawalBold14"

            android:text="@{viewModel.text}"
            tools:text="@string/deletion_of_address_is_confirmed"

            android:gravity="center"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/circleImageView"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/materialButton"

            android:layout_width="0dp"
            android:layout_height="wrap_content"

            app:layout_constraintWidth_percent="0.5"

            style="@style/Widget.MaterialComponents.Button"
            android:textAppearance="@style/TextTajawalMedium16"

            android:text="@string/done"
            android:textColor="@android:color/black"

            android:background="@drawable/dr_project_round"
            app:backgroundTint="@null"

            android:layout_marginTop="16dp"

            android:onClick="@{v -> viewModel.done(v)}"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
